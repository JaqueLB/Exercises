<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.grupouninter.activitylifecycle.activityresult.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnOpcao"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="Opções"
        android:layout_marginLeft="156dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/resultado"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnArgumento"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/título"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A opção selecionada foi:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="53dp"
        app:layout_constraintHorizontal_bias="0.556" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPÇÃO"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/título"
        app:layout_constraintHorizontal_bias="0.501" />

    <Button
        android:id="@+id/btnArgumento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Argumento"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="53dp"
        app:layout_constraintBottom_toTopOf="@+id/btnEnviaPojo" />

    <Button
        android:id="@+id/btnEnviaPojo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Pojo"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginBottom="69dp" />
</android.support.constraint.ConstraintLayout>
